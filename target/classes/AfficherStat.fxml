<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AfficherStatistiques">

    <children>
        <DatePicker fx:id="datePickerDebut" layoutX="20" layoutY="20"/>
        <DatePicker fx:id="datePickerFin" layoutX="20" layoutY="60"/>
        <Button text="Afficher Statistiques" onAction="#afficherStatistiques" layoutX="20" layoutY="100"/>
    </children>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</AnchorPane>
