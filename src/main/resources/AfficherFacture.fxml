<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherFacture">
    <VBox layoutX="50.0" layoutY="50.0" spacing="10.0">
        <HBox spacing="10.0">
            <TextField fx:id="searchNumField" promptText="Numéro de Facture" />
            <Button onAction="#rechercherFactures" text="Rechercher" />
        </HBox>
        <TableView fx:id="tableFactures">
            <columns>
                <TableColumn fx:id="numFactureColumn" text="Numéro de Facture">
                    <cellValueFactory>
                        <PropertyValueFactory property="numFacture" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="dateColumn" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="typeColumn" text="Type">
                    <cellValueFactory>
                        <PropertyValueFactory property="type" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="montantColumn" text="Montant">
                    <cellValueFactory>
                        <PropertyValueFactory property="montant" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="descriptionColumn" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="descriptionFacture" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Button onAction="#ajouterFacture" text="Ajouter" />
        <Button onAction="#supprimerFacture" text="Supprimer" />
        <Button onAction="#modifierFacture" text="Modifier" />
    </VBox>
</AnchorPane>
