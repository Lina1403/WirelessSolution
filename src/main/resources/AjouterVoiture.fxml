     <Button fx:id="supprimerButton" disable="true" layoutX="318.0" layoutY="325.0" onAction="#handleSupprimerButton" text="Supprimer" />
        <ProgressBar fx:id="progressBar" layoutX="499.0" layoutY="203.0" prefHeight="18.0" prefWidth="185.0" />

        <ImageView fx:id="qrCodeImageView" fitHeight="200" fitWidth="200" layoutX="224.0" layoutY="360.0" />

        <Label layoutX="112.0" layoutY="128.0" prefHeight="20.0" prefWidth="91.0" text="Marque :" textFill="WHITE">
