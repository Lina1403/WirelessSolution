         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="112.0" layoutY="280.0" prefHeight="20.0" prefWidth="91.0" text="Matricule :" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10" />
        </VBox>
    </children>
</AnchorPane>
