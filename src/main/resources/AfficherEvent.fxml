<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherEvent">
    <children>
        <ImageView fitHeight="600.0" fitWidth="800.0">
            <image>
                <Image url="@image/ListeEvent.png" /> <!-- Assurez-vous d'avoir l'image correcte et le chemin correct -->
            </image>
        </ImageView>
        <ListView fx:id="listeEvents" layoutX="274.0" layoutY="168.0" prefHeight="320.0" prefWidth="459.0" />
        <HBox layoutX="46.0" layoutY="366.0" spacing="20.0" /> <!-- Vous pouvez ajouter d'autres éléments ici si nécessaire -->
        <Button fx:id="boutonGerer" blendMode="HARD_LIGHT" layoutX="288.0" layoutY="501.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="147.0" text="Gerer les évènements" />
        <Button fx:id="boutonGererEspace" layoutX="59.0" layoutY="103.0" mnemonicParsing="false" onAction="#ouvrirAjouterEspace" opacity="0.0" prefHeight="35.0" prefWidth="110.0" text="Gerer les espaces " />
        <TextField fx:id="txtRechercheNom" layoutX="598.0" layoutY="120.0" prefHeight="26.0" prefWidth="129.0" promptText="Rechercher un event" />
        <ChoiceBox fx:id="triChoiceBox" layoutX="274.0" layoutY="120.0" prefHeight="26.0" prefWidth="103.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Nom" />
                    <String fx:value="Date" />
                </FXCollections>
            </items>
        </ChoiceBox>

    </children>
</AnchorPane>
