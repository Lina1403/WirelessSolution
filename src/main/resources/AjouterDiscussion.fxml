<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="246.0" prefWidth="457.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjoutDiscussion">
    <children>
        <!-- Titre de la discussion -->
        <Label layoutX="201.0" layoutY="30.0" text="Discussion" />

        <!-- Champ pour ajouter un titre -->
        <TextField fx:id="titre" layoutX="48.0" layoutY="98.0" prefHeight="25.0" prefWidth="359.0" promptText="Ajouter titre de votre discussion" />

        <!-- Bouton de validation -->
        <Button layoutX="198.0" layoutY="152.0" onAction="#ajouterEvent" text="Validate" />
    </children>
</AnchorPane>
