<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>

<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AjouterAppartement"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10.0" layoutX="50.0" layoutY="50.0">
        <Text fx:id="title" text="Ajouter Appartement" />
        <VBox spacing="10.0">
            <Label text="Numéro de l'appartement" />
            <TextField fx:id="numAppartementField" />
        </VBox>
        <VBox spacing="10.0">
            <Label text="Nom du résident" />
            <TextField fx:id="nomResidentField" />
        </VBox>
        <VBox spacing="10.0">
            <Label text="Taille" />
            <TextField fx:id="tailleField" />
        </VBox>
        <VBox spacing="10.0">
            <Label text="Nombre d'étage" />
            <TextField fx:id="nbrEtageField" />
        </VBox>
        <VBox spacing="10.0">
            <Label text="Statut Appartement" />
            <ComboBox fx:id="statutComboBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Occupee" />
                        <String fx:value="Libre" />
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>
        <Button layoutX="465.0" layoutY="316.0" mnemonicParsing="false" onAction="#AjouterAppartement" text="Ajouter" />
    </VBox>
</AnchorPane>
